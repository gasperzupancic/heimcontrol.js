each item in items
  div.plugin-container.dht22(class=item.method, id="#{item._id}")
    - if (item.method == 'sensor')
      p.description
        strong #{item.description}&nbsp; 
        span.muted PIN #{item.pin}
      div.large
        p.temp
          span T:&nbsp;
          span.value(data-id="#{item._id}t") #{item.value[0]}
          | &deg;#{item.unit}
        p
          br 
        p.hum
          span H:&nbsp;
          span.value(data-id="#{item._id}h") #{item.value[1]}
          | &percnt;
      div.chart(id="#{item._id}-graph", style="width: 100%; height: 600px;")
